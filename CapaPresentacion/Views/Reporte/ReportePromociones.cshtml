    <script>
        $(document).ready(function () {
            //ListarTienda();
        });

      

        function MostrarReporte() {

            var cdna = $('#dwCna').val();   
            var fecIni = ($("#fecini").val()).split('-');
            var fecFin = ($("#fecfin").val()).split('-');
            var strIni = fecIni[2] + fecIni[1] + fecIni[0];
            var strFin = fecFin[2] + fecFin[1] + fecFin[0];
            var tipo = $('#dwTipo').val();

            var cfiltro = $('#dwFil').val();

            var objPromocion = {
                cod_cadena: cdna,
                fecIni: strIni,
                FecFin: strFin,
                filtro: cfiltro,
                tipo: tipo
            }

            waitingDialog.show('Espere un momento por favor');

            $.ajax
              ({
                  url: '../Reporte/ExportDataPromociones',
                  dataType: "json",
                  type: "POST",
                  data: objPromocion,
                  success: function (data, textStatus, XMLHttpRequest) {
                      waitingDialog.hide();

                      if ((data.Success).toString() == "true") {

                          if (data.Message == "1") {
                              toastr.success("Data Exportada ", "Mensaje");                            
                              waitingDialog.hide();
                              DescargarArchivos();

                          } else {
                              toastr.success("Data no Exportada", "Error");
                             
                          }

                      } else {
                          toastr.error("Data no Exportada", "Error");
                          waitingDialog.hide();
                      }

                  },
                  error: function (xhr) {
                      waitingDialog.hide();
                      toastr.error(xhr, 'Error');
                      waitingDialog.hide();
                  }
              })

        }

        function DescargarArchivos() {
            window.location = '@Url.Action("DescargarPromociones")';
            waitingDialog.hide();

        }


    </script>
