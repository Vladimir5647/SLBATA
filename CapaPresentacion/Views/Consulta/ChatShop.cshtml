    function EnviaCourier_2(CodInterno, Tienda, NroDocumento, CodSeguimiento, Ruc, Cliente) {

        //alert(CodInterno);
        //alert(CodSeguimiento);

        if (CodSeguimiento == '') {
            waitingDialog.show('Espere un momento por favor...');

            var objGuiaError = {
                CodInterno: CodInterno,
                IdTienda: Tienda,
                NroDocumento: NroDocumento,
                CodSeguimiento: CodSeguimiento,
                Ruc: Ruc,
                Cliente: Cliente,

            }

            $.ajax
              ({
                  url: '../Consulta/Envia_Courier',
                  dataType: "json",
                  type: "POST",
                  data: objGuiaError,
                  success: function (data, textStatus, XMLHttpRequest) {
                      waitingDialog.hide();


                      if ((data.Success).toString() == "true") {
                          if (data.Message == "1") {

                              toastr.success("Se realizó satisfactoriamente el llamado al courier", "Mensaje");
                              setInterval(function () {
                                  waitingDialog.hide();
                              }, 40000);

                              location.reload(true);
                          }

                      } else {
                          if (data.Message == "2") {
                              toastr.error("No se llamó al courier,falta definir el código de Ubigeo o código Postal", "Error");
                              //MostrarListado();
                              waitingDialog.hide();
                          } if (data.Message == "99") {
                              toastr.error("Error en el servidor no se puedo realizar el llamado de courier ,porfavor intentelo mas tarde", "Error");
                              waitingDialog.hide();

                          }
                      }
                  },
                  error: function (xhr) {
                      waitingDialog.hide();
                      toastr.error("No se realizó el llamado de courier", "Error");
                      waitingDialog.hide();
                  }

              })

        } else {

            toastr.error("El pedido ya ha sido enviado anteriormente", "Error");
            waitingDialog.hide();
        }
    }

