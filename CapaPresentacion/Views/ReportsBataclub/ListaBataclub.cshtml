<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.5.1/css/buttons.dataTables.min.css" />

<style type="text/css">
    .dt-buttons {
        display: none;
    }
</style>
<table id="example" class="table table-hover dataTable  table-striped table-responsive">
    <thead>
        <tr style="background-color:#3d566e; color:#ecf0f1">
            <th style="width:auto">Cod-Tienda</th>
            <th style="width:auto">Des-Tienda</th>
            <th style="width:auto">Semana</th>
            <th style="width:auto">Fecha</th>
            <th style="width:auto">Dni</th>
            <th style="width:auto">Documento</th>
            <th style="width:auto">Pares</th>
            <th style="width:auto">Soles</th>
            <th style="width:auto">Estado</th>
            <th style="width:auto">Fecha-Reg</th>
            <th style="width:auto">Promocion</th>
        </tr>
    </thead>
    <tbody data-bind="foreach:">
        @using CapaEntidad.Reports
        @model IEnumerable<Ent_Bataclub>

        @foreach (Ent_Bataclub item in Model)
        {
            <tr>
                <td>@item.cod_tienda.ToString()</td>
                <td>@item.des_tienda.ToString()</td>
                <td>@item.semana.ToString()</td>
                <td>@item.fecha.ToString()</td>
                <td>@item.dni</td>
                <td>@item.bolfac</td>
                <td>@item.pares</td>
                <td>@item.soles</td>
                <td>@item.estado</td>
                <td></td>
                <td></td>

            </tr>

        }
    </tbody>
    <tfoot>
        <tr>
            <th>Cod-Tienda</th>
            <th>Des-Tienda</th>
            <th>Semana</th>
            <th>Fecha</th>
            <th>Dni</th>
            <th>Documento</th>
            <th>Pares</th>
            <th>Soles</th>
            <th>Estado</th>
            <th>Fecha-Reg</th>
            <th>Promocion</th>
        </tr>
    </tfoot>
</table>
<script src='https://cdn.datatables.net/buttons/1.5.1/js/dataTables.buttons.min.js'></script>
<script src='//cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js'></script>
<script src='//cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js'></script>
<script src='//cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js'></script>
<script src='//cdn.datatables.net/buttons/1.5.1/js/buttons.html5.min.js'></script>


<script>
    $(document).ready(function () {

        $('.table').dataTable({
            "language": {
                "url": "../Scripts/DataTables/Spanish.json"
            },
                dom: 'Bfrtip',
                buttons: [
               {
                   extend: 'excelHtml5',
                   text: '<i class="fa fa-file-excel-o"></i> Exportar a Excel',
                   className: 'xlsExportButton hideButton',
                   title: 'Bataclub_xls',
                   css:'display:none'

               }

               ]
        });


    });



</script>